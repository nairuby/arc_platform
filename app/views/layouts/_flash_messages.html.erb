<div class="toast toast-top toast-end">
  <% if notice || alert %>
    <div class="alert alert-<%= notice ? 'success' : 'error' %> alert_custom_class">
      <!--  Display flash icon on the left-->
      <% if notice %>
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6"
             fill="none" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6
        2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      <% elsif alert %>
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6"
             fill="none" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0
        0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      <% end %>

      <div><%= content_tag :span, notice || alert %></div>
    </div>
  <% end %>
</div>
